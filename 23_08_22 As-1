#include<stdio.h>
int main()
{
	int a[100][100],i,j,r,c,sum,n;
	printf("Enter how many rows \n");
	scanf("%d",&r);
	printf("Enter how many cols \n");
	scanf("%d",&c);
	printf("Enter elements into array \n");
	for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
			scanf("%d",&a[i][j]);
		}
	}
	printf("Row number\n");
        scanf("%d",&n);
        for(i=0;i<r;i++)
        {
              for(j=0;j<r;j++)
	     {
                   if(i==n)
                 sum=sum+a[i][j];
              }
        }
        printf("%d Row sum=%d",n,sum);
      return 0;
}
