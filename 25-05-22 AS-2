#include<stdio.h>
#include<string.h>
#include<ctype.h>
int main()
{
    char str[30];
    int i;
    printf("Enter String : ");
    gets(str);

    for(i = 0; str[i] != '\0'; i++)
    {
        if( (i % 2) != 0)
       
            str[i] = str[i]-32;
    }
    printf("\n%s", str);
    return 0;
}

output: aditya
        aDiTyA
